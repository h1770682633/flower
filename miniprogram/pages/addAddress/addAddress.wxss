/* pages/addAddress/addAddress.wxss */
@import "../../template/model.wxss";

page{
  height: auto;
}
.address-bottom{
  position: fixed;
  width: 95%;
  height: 95rpx;
  bottom: 12rpx;
  left: 50%;
  transform: translateX(-50%);
}
.address-bottom .user-add-address{
  display: block;
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  text-align: center;
  line-height: 95rpx;
  color: #ffffff;
  background: #20723b;
}
.container{
  width: 100%;
  margin-top: 20rpx;
}
.input-wrap{
  position: relative;
  width: 100%;
  background: #ffffff;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  min-height: 75rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 12rpx;  
  overflow-x: hidden;
}
.input-wrap input{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  padding-left: 4.5em;
  box-sizing: border-box;
  padding-right: 1em;
}
.uesr-phone-num input{
  padding-left: 5.5em;
}
.user-address{
  display: block;
}
.user-address .user-address-selected{
  width: 100%;
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
}
.user-address textarea{
  width: 100%;
  padding-left: 6em;
  padding-right: 1em;
  position: relative;
  min-height: 60rpx;
  max-height: 120rpx;
  margin-bottom: 12rpx;
  box-sizing: border-box;
}
.uesr-code input{
  padding-left: 5.5em;
}
.user-switch-wrap{
  justify-content: space-between;
}
