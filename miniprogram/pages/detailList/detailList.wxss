/* pages/detailList/detailList.wxss */

/* @import "../../style/guide.wxss"; */
page{
  height: auto;
}
.container{
  width: 100%;
}
.list-top-wrap{
  width: 98%;
  height: auto;
  background: #fff;
}
.list-top-wrap .list-top-img{
  width: 100%;
  height: 400rpx;
}
.list-top-wrap .list-top-text{
  width: 100%;
  display: block;
  padding-left: 36rpx;
  font-size: 30rpx;
  margin:12rpx 0;
}
.list-top-wrap .list-top-price{
  color: #f86565;
  font-size: 32rpx;
}
.list-top-wrap .list-money-text{
  color: #999999;
  font-size: 24rpx;
}
.list-top-wrap .list-money-text .list-top-num{
  margin-left: 26rpx;
}
.detail-server-text{
  margin-top: 20rpx;
  background: #fff;
  height: 60rpx;
  line-height: 60rpx;
}
.detail-list-text{
  width: 100%;
  height: auto;
  position: relative;
  color: #999999;
  font-size: 26rpx;
}
.detail-list-text .detail-text-title{
  padding-left: 1.6em;
  width: 25%;
  display: inline-block;
  box-sizing: border-box;
  text-align: start;
}
.detail-list-text .detail-text-content{
  width: 73%;
  display: inline-block;
  color: #333333;
}
.detail-information-wrap{
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
}
.detail-information-wrap .detail-list-text{
  margin: 20rpx 0; 
}
.detail-bottom-wrap{
  position: fixed;
  width: 100%;
  height: 90rpx;
  background: #fff;
  bottom: 0;
  left: 0;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  color: #000000;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.detail-bottom-wrap .detail-bottom-btn-wrap{
  width: auto;
  height: auto;
  border-radius: 50rpx;
  /* background: #578e6d; */
  color: #fff;
}
.detail-bottom-wrap .detail-bottom-btn-wrap text{
  display: inline-block;
  padding: 12rpx 30rpx;
  background: #578e6d;
  border: 1rpx solid #1d6635;
  border-radius: 50rpx 0 0 50rpx;
  font-size: 32rpx;
}
.detail-bottom-wrap .detail-bottom-btn-wrap .detail-btn-pay{
  background: #20723b;
  border-radius: 0 50rpx 50rpx 0;
}
/* 评论内容 */
.detail-comment-box{
  width: 100%;
  background: #fff;
  height: auto;
  margin-top: 16rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  padding: 0 1.6em;
}
.detail-comment-box .comment-top-text-wrap{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 75rpx;
}
.detail-comment-box .comment-top-text-wrap .comment-top-text1{
  position: relative;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.detail-comment-box .comment-top-text-wrap .comment-top-text1::before{
  position: absolute;
  content: '';
  width: 9rpx;
  height: 100%;
  background: #275439;
  left: 0;
  top: 0;
}
.detail-comment-box .comment-person{
  margin-top: 12rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  width: 100%;
  height: 130rpx;
  margin-bottom: 30rpx;
}
.detail-comment-box .comment-person image{
  width: 90rpx;
  height: 90rpx;
}
.detail-comment-box .comment-person .comment-person-infro{
  margin-left: 20rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  height: 100%;
  width: auto;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 26rpx;
}
.detail-comment-box .comment-person .comment-person-infro .comment-person-time{
  color: #9d9d9d;
}
/* 页面片段 */
.goods-detail{
  margin-top: 16rpx;
  background: #fff;
  width: 100%;
  margin-bottom: 100rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  padding: 12rpx 5.5% 0;
}
.goods-detail .goods-detail-text{
  margin-top: 12rpx;
  position: relative;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}
.goods-detail .goods-detail-text::before{
  position: absolute;
  content: '';
  width: 9rpx;
  height: 100%;
  background: #275439;
  left: 0;
  top: 0;
}
.goods-detail .goods-detail-information{
  display: block;
  width: 100%;
  margin-top: 12rpx;
  text-align: justify;
  line-height: 50rpx;
  color: #333333;
}
.goods-detail .goods-detail-img{
  display: block;
  margin: 20rpx auto 12rpx;
  width: 75%;
  height: 360rpx;
}