/* pages/address/address.wxss */

/* @import "../../style/guide.wxss"; */
@import '../../template/model.wxss';
page{
  height: auto;
}
.address-box{
  box-sizing: border-box;
  width: 93%;
  height: auto;
  margin: 16rpx auto 0;
}
.address-wrap{
  width: 100%;
  height: 210rpx;
  border-radius: 12rpx;
  background: #fff;
  margin-bottom: 20rpx;
  padding: 0 12rpx;
  box-shadow: 3px 3px 3px #ccc;
  box-sizing:border-box;
}
.address-wrap .address-infro-wrap{
  height: 57%;
  width: 100%;
  border-bottom: 1rpx solid #ffeeee;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  color: #666666;
  font-size: 26rpx;
}
.address-wrap .address-infro-wrap .address-infro{
  max-width: 65%;
  min-width: 50%;
  height: 100%;
  /* display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: center; */
}
.address-wrap .address-infro-wrap .address-infro text{
  display: block;
  width: 100%;
  height: 50%;
  line-height: 60rpx;
}
.address-wrap .address-infro-wrap .user-phone{
  width: 35%;
  text-align: center;
  color: #999999;
}
.address-wrap .user-bottom{
  width: 100%;
  height:43%;
  display: flex;
  display: -webkit-flex;
  align-items: center; 
  justify-content: space-between;
}
.address-wrap .user-bottom .user-selected{
  font-size: 30rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
.address-wrap .user-bottom .user-selected icon{
  position: relative;
  width: 32rpx;
  height: 32rpx;
  border: 1rpx solid #e1e1e1;
  border-radius: 50%;
  display: inline-block;
  margin-right: 12rpx;
}
.address-wrap .user-bottom .user-selected.active icon{
  border: 1rpx solid #fff;
  background: #4ab66e;
}
.address-wrap .user-bottom .user-selected.active icon::before{
  position: absolute;
  content: '';
  background: url(http://192.168.1.109:8080/wx-img/checkbox.png) no-repeat center;
  background-size: 100% 100%;
  width: 20rpx;
  height: 20rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.address-wrap .user-bottom .user-btn-wrap text{
  position: relative;
  display: inline-block;
  color: #666666;
  font-size: 28rpx;
  margin-right: 6rpx;
}
.address-wrap .user-bottom .user-btn-wrap .user-bj{
  margin-right: 55rpx;
}
.address-wrap .user-bottom .user-btn-wrap text::before{
  position:absolute;
  content: '';
  background: url(http://192.168.1.109:8080/wx-img/btn-bj.png) no-repeat center/cover;
  width: 32rpx;
  height: 32rpx;
  left: -35rpx;
  top: 50%;
  transform: translateY(-50%);
}
.address-wrap .user-bottom .user-btn-wrap .user-delete::before{
  background: url(http://192.168.1.109:8080/wx-img/btn-delete.png) no-repeat center/cover;
}
.address-bottom{
  position: fixed;
  width: 95%;
  height: 95rpx;
  bottom: 12rpx;
  left: 50%;
  transform: translateX(-50%);
}
.address-bottom .user-add-address{
  display: block;
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  text-align: center;
  line-height: 95rpx;
  color: #ffffff;
  background: #20723b;
}